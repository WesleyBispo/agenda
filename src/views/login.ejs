<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container text-center">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3 div-center">
            <h1>Login</h1>
            <p class="lead">Fa√ßa login ou crie sua conta abaixo</p>

            <%- include('./includes/messages') %> <%#MESSAGES%>

            <div class="container login-container">
                <div class="row">
                    <div class="col-md-6 login-form-1">
                        <h3>Criar conta</h3>
                        <form class="form-register" action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group">
                                <input type="email" class="form-control email validar" placeholder="Seu Email *"  name="email" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control senha validar" placeholder="Sua Senha *" name="password" />
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnSubmit" value="Criar Conta" />
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 login-form-2">
                        <h3>Entrar na sua conta</h3>
                        <form class="form-login" action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group">
                                <input type="email" class="form-control email validar" placeholder="Seu Email *" name="email" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control senha validar" placeholder="Sua Senha *" name="password" />
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnSubmit" value="Entrar" />
                            </div>
                            <div class="form-group">
                                <a href="#" class="ForgetPwd" value="Login">Esqueceu sua Senha?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./includes/footer') %>
